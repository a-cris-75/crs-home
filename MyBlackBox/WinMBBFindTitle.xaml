<Window x:Class="MyBlackBoxCore.WinMBBFindTitle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MBB Find Title" Height="353" Width="400" xmlns:my="clr-namespace:MyBlackBoxCore" 
        WindowStyle="None" UseLayoutRounding="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        AllowsTransparency="True" ShowInTaskbar="False" Background="{x:Null}" Icon="/MyBlackBoxCore;component/BlackBoxIcon64.ico">
    <Grid Name="pnlMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Border Background="#C5F0F0F0" BorderBrush="#50000000" BorderThickness="1" Grid.Column="2" Grid.Row="1" CornerRadius="5" >
            <my:MBBTitle x:Name="ctrlMBBTitle" Margin="3" Width="Auto" Height="Auto" />
            
        </Border>
        <Border Name="pnlLeft" BorderThickness="1" CornerRadius="5" BorderBrush="#50000000" Background="#C5F0F0F0" Margin="0,3" Padding="2">
            <StackPanel Orientation="Horizontal" Background="#FFF9F9F9">

                <StackPanel Name="pnlWinBtns"  Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Canvas.Left="2" Canvas.Top="68" >
                    <Image Name="imgExit" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_red.ico"  ToolTip="Exit"  Cursor="Hand" Margin="1" MouseDown="imgExit_MouseDown" HorizontalAlignment="Center" MinWidth="21" MinHeight="21" Canvas.Top="-1" />
                    <!--Image Name="imgMaximize" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Images/bullet_ball_glass_yellow.ico"  ToolTip="Maximize/minimize"  Cursor="Hand" Margin="1" HorizontalAlignment="Center" MinWidth="21" MinHeight="21" Canvas.Top="-1" MouseDown="imgMaximize_MouseDown" Visibility="Collapsed" /-->
                </StackPanel>
                
            </StackPanel>
        </Border>
    </Grid>
</Window>
