<UserControl x:Class="MyBlackBoxCore.MBBFunctions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyBlackBoxCore"
             mc:Ignorable="d" Width="2" Height="2">
    <Grid>
        <Border Name="pnlBorderMain" Background="Transparent" BorderBrush="#05000000" BorderThickness="1"  
                    Margin="0,0,0,0" CornerRadius="160" >
            <Canvas Name="pnlMain">
                <Canvas Name ="F0"  Canvas.Left="-15" Canvas.Top="-120" >
                    <Border CornerRadius="150" Cursor="Hand"                      
                        Background="#FFC7E1F7" Height="48" Width="48" BorderBrush="#50000000" BorderThickness="1" >
                        <Image Name="imgF0_Note" TextBlock.TextAlignment="Center" MouseDown="imgF0_Note_MouseDown"></Image>
                    </Border>
                    <TextBlock Text="N"  
                         FontSize="20" Canvas.Top="10" Canvas.Left="17"
                         MouseDown="imgF0_Note_MouseDown" Cursor="Hand" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Canvas>
                <Canvas Name ="F1" Canvas.Left="38" Canvas.Top="-114" >
                    <Border CornerRadius="150" Cursor="Hand"
                        Background="#FFDCCDFB"  Height="48" Width="48" BorderBrush="#50000000" BorderThickness="1" >
                        <Image Name="imgF1_Docs" MouseDown="imgF1_Docs_MouseDown" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                    </Border>
                    <TextBlock Text="D" Canvas.Top="10" Canvas.Left="17" 
                        FontSize="20" 
                         MouseDown="imgF1_Docs_MouseDown" Cursor="Hand"></TextBlock>
                </Canvas>
                <Canvas  Name ="F2" Canvas.Left="83" Canvas.Top="-85">
                    <Border CornerRadius="150" Cursor="Hand" Background="#C5F7D488"  Height="48" Width="48" BorderBrush="#50000000" BorderThickness="1" >
                        <Image Name="imgF2_App" MouseDown="imgF2_App_MouseDown"></Image>
                    </Border>
                    <TextBlock Text="Ap" Canvas.Top="10" Canvas.Left="13"  
                         FontSize="20" 
                         MouseDown="imgF2_App_MouseDown" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Canvas>
                <Canvas Name ="F3" Canvas.Left="109" Canvas.Top="-40" >
                    <Border CornerRadius="150" Cursor="Hand" Background="#C5B6FB7D"  Height="48" Width="48" BorderBrush="#50000000" BorderThickness="1" >
                        <Image Name="imgF3_Activity" MouseDown="imgF3_Activity_MouseDown">
                        </Image>
                    </Border>
                    <TextBlock Text="Ac" Canvas.Top="10" Canvas.Left="14"  
                         FontSize="20" 
                         MouseDown="imgF3_Activity_MouseDown" Cursor="Hand"></TextBlock>
                </Canvas>
                <Canvas Name ="F4" Canvas.Left="116" Canvas.Top="12" >
                    <Border CornerRadius="150" Cursor="Hand" Background="#C5F5FB7D"  Height="48" Width="48" BorderBrush="#50000000" BorderThickness="1" >
                        <Image Name="imgF4_Sticky" MouseDown="imgF4_Sticky_MouseDown">
                        </Image>
                    </Border>
                    <TextBlock Text="St" Canvas.Top="10" Canvas.Left="14"  
                         FontSize="20" 
                         MouseDown="imgF4_Sticky_MouseDown" Cursor="Hand"></TextBlock>
                </Canvas>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
