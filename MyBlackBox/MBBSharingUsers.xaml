<UserControl x:Class="MyBlackBoxCore.MBBSharingUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  Background="#FFEBEBEB"
             d:DesignHeight="429" d:DesignWidth="380" 
             xmlns:my="clr-namespace:CRS.WPFControlsLib;assembly=CRS.WPFControlsLib" MouseEnter="UserControl_MouseEnter">
    <UserControl.Resources>
        <DataTemplate x:Key="MyImagesItemTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="{Binding Path=Image}" />
                <Label Grid.Row="1" Content="{Binding Path=Title}" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Name="pnlMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="34"></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
            <RowDefinition Height="200*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Name="pnlBtns" Grid.Row="0">
        </StackPanel>
        <DockPanel >
            <Image Name="imgExit" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_red.ico"  ToolTip="Exit"  Cursor="Hand" Margin="3" MouseDown="imgExit_MouseDown" MinWidth="21" MinHeight="21" />
            <my:CRSIconButton Name="btnOpen" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="6" Canvas.Top="6"  LabelText="+" Icon="/MyBlackBoxCore;component/Images/playdx.png" LabelVisibility="Visible" IconHeight="28" IconWidth="28" ToolTip="Apri" FontFamily="Segoe Print" FontSize="22" IconVisibility="Collapsed" FontWeight="Bold" Click="btnOpen_Click" Visibility="Visible" VerticalAlignment="Center" />
            <my:CRSIconButton Name="btnDel"  Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="46" Canvas.Top="6" Icon="/MyBlackBoxCore;component/Images/del.png" IconHeight="24" IconWidth="24" LabelText="x" LabelVisibility="Visible" ToolTip="Cancella" FontFamily="Segoe Print" FontSize="22" FontWeight="Bold" IconVisibility="Collapsed" Click="btnDel_Click" Visibility="Hidden" VerticalAlignment="Center" />
            <TextBlock Name="textBlockNumItems" Text="Users:" FontStyle="Italic" Margin="10" VerticalAlignment="Center" Padding="3" />
        </DockPanel>
        <TabControl Grid.Row="2" HorizontalAlignment="Stretch" Name="tcMain" 
                    Background="WhiteSmoke"
                    VerticalAlignment="Stretch" Margin="1">

            <TabItem Header="Users">
                <Grid Name="pnlGridUsers">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"></RowDefinition>
                        <RowDefinition Height="200*"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DockPanel Name="pnlTopUsers" Grid.Row="0" Visibility="Visible">
                        <Canvas Background="WhiteSmoke">
                            <CheckBox Name="chkSelUsersGrp" Margin="20,10,0,10"  IsChecked="False" Click="chkSelUsersGrp_Click" Canvas.Top="0" Canvas.Left="9"></CheckBox>
                            <Label Content="Group" Height="28" x:Name="lblGroup" Width="49" FlowDirection="RightToLeft" Padding="5" Canvas.Left="36" Canvas.Top="3" />
                            <ComboBox Height="23" Name="cmbGrp" Width="221" SelectionChanged="cmbGrp_SelectionChanged" IsEditable="False" IsEnabled="False" Padding="2" Canvas.Left="85" Canvas.Top="5" />
                        </Canvas>

                    </DockPanel>
                    <Grid Name="pnlSelectShUsers" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="100*"/>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Column="1" Width="3"></GridSplitter>
                        <DockPanel Name="pnlAllUsers" Visibility="Visible" Width="Auto">
                            <!--Grid.RowDefinitions>
                                <RowDefinition Height="160*" />
                                <RowDefinition Height="0" />
                            </>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150*" />
                                <ColumnDefinition Width="28" />
                            </Grid.ColumnDefinitions-->

                            
                            <StackPanel Grid.Column="1" Grid.Row="0"   Width="28" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Right">
                                <my:CRSIconButton Name="btnMoveSelDx" Width="Auto"
                                                  FontFamily="Segoe Print" FontSize="18" FontWeight="Bold" 
                                                  Height="26" IconHeight="30" IconVisibility="Collapsed" IconWidth="24" 
                                                  LabelText=">" LabelVisibility="Visible" ToolTip="Cancella" Click="btnMoveSelDx_Click" Margin="0,0,0,2" />
                                <my:CRSIconButton Name="btnMoveSelSx" Width="Auto"
                                                  FontFamily="Segoe Print" FontSize="18" FontWeight="Bold" 
                                                  Height="26" IconHeight="30" IconVisibility="Collapsed" IconWidth="24" 
                                                  LabelText="&lt;" LabelVisibility="Visible" ToolTip="Cancella" Click="btnMoveSelSx_Click" Margin="0,0,0,2" />

                                <my:CRSIconButton Name="btnMoveAllDx" Width="Auto"
                                                  FontFamily="Segoe Print" FontSize="18" FontWeight="Bold" 
                                                  Height="26" IconHeight="30" IconVisibility="Collapsed" IconWidth="24" 
                                                  LabelText=">>" LabelVisibility="Visible" ToolTip="Cancella" Click="btnMoveAllDx_Click" Margin="0,0,0,2" />
                                <my:CRSIconButton Name="btnMoveAllSx" Width="Auto"
                                                  FontFamily="Segoe Print" FontSize="18" FontWeight="Bold" 
                                                  Height="26" IconHeight="30" IconVisibility="Collapsed" IconWidth="24" 
                                                  LabelText="&lt;&lt;" LabelVisibility="Visible" ToolTip="Cancella" 
                                                  DockPanel.Dock="Left" Click="btnMoveAllSx_Click" />
                            </StackPanel>
                            <GroupBox x:Name="gbUsersLst" Header="Users List" Grid.Row="0" Grid.Column="0" Padding="0,9,0,0" Margin="0,0,3,0">
                                <ListView Grid.Row="1" Name="lvAllUsers" UseLayoutRounding="True" SelectionMode="Multiple"></ListView>
                            </GroupBox>
                        </DockPanel>

                        <!--Grid Grid.Row="0" Name="pnlAllUsersSel"  Width="170">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition Width="150*" />
                        </Grid.ColumnDefinitions-->
                        <GroupBox x:Name="gbSharingUsersSel" Grid.Column="2"
                                  Header="Sharing Users" Padding="0,9,0,0">
                            <ListView Name="lvUsersShared" UseLayoutRounding="True" SelectionMode="Multiple" />
                        </GroupBox>

                        <!--/Grid-->

                    </Grid>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" DockPanel.Dock="Top" Background="#69EBEBEB">
                        <my:CRSLabelControl Margin="0,3,0,0"  HorizontalAlignment="Stretch" Name="txtUserName" VerticalAlignment="Center" ControlType="text" LabelContent="New User" DockPanel.Dock="Top" LabelIconVisibility="Collapsed" WidthLabel="80" UseLayoutRounding="False" Width="326" Height="31.5" HeightControl="25" />
                        <my:CRSIconButton Grid.Column="1" Name="btnSaveUser" Margin="1,3" FontFamily="Segoe Print" FontSize="20" FontWeight="Bold" Height="26" Icon="/MyBlackBoxCore;component/Images/del.png" IconHeight="24" IconVisibility="Collapsed" IconWidth="24" LabelText="v" LabelVisibility="Visible" ToolTip="Cancella" Width="26" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnSaveUser_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Make Groups">
                <Grid Name="pnlGridGroups">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"></RowDefinition>
                        <RowDefinition Height="200*"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                            <Label Content="Group" Height="28"  Width="85" FlowDirection="RightToLeft" />
                            <ComboBox Height="23" Name="cmbGrp2" Width="224" SelectionChanged="cmbGrp2_SelectionChanged" IsEditable="False" IsEnabled="True" IsReadOnly="False" BorderBrush="#B4000000" />
                            <!--my:CRSIconButton Name="btnAddGrp2" FontFamily="Segoe Print" FontSize="22" FontWeight="Bold" Height="26" Icon="/MyBlackBoxCore;component/Images/del.png" IconHeight="24" IconVisibility="Collapsed" IconWidth="24" LabelText="+" LabelVisibility="Visible" ToolTip="Add group" Width="26" DockPanel.Dock="Left" Margin="12,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnAddGrp_Click" /-->
                            <my:CRSIconButton Name="btnDelGrp2" FontFamily="Segoe Print" FontSize="20" FontWeight="Bold" Height="26" Icon="/MyBlackBoxCore;component/Images/del.png" IconHeight="24" IconVisibility="Collapsed" IconWidth="24" LabelText="-" LabelVisibility="Visible" ToolTip="Cancel" Width="26" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4" Click="btnDelGrp_Click" />
                        </StackPanel>


                    </DockPanel>
                    <Grid  Grid.Row="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="110*"/>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Column="1" Width="3"></GridSplitter>
                        <DockPanel Name="pnlAllUsers2" Grid.Column="0" Visibility="Visible">
                            <!--Grid.RowDefinitions>
                                <RowDefinition Height="0" />
                                <RowDefinition Height="160*" />
                            </>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150*" />
                                <ColumnDefinition Width="28" />
                            </Grid.ColumnDefinitions-->

                            
                            <StackPanel Grid.Column="1" Grid.Row="1" Width="28" VerticalAlignment="Center" HorizontalAlignment="Center" DockPanel.Dock="Right">
                                <my:CRSIconButton Name="btnMoveDxGrp" Width="Auto"
                                                  FontFamily="Segoe Print" FontSize="18" FontWeight="Bold" Height="26" IconHeight="30" IconVisibility="Collapsed" IconWidth="24" LabelText=">>" LabelVisibility="Visible" ToolTip="Cancella" Click="btnMoveDxGrp_Click" Margin="0,0,0,2" />
                                <my:CRSIconButton Name="btnMoveSxGrp" Width="Auto"
                                                  FontFamily="Segoe Print" FontSize="18" FontWeight="Bold" Height="26" IconHeight="30" IconVisibility="Collapsed" IconWidth="24" LabelText="&lt;&lt;" LabelVisibility="Visible" ToolTip="Cancella" DockPanel.Dock="Left" Click="btnMoveSxGrp_Click" />
                            </StackPanel>
                            <GroupBox Header="Users List" Grid.Row="1" Grid.Column="0" Padding="0,9,0,0" Margin="0,0,3,0">
                                <ListView Name="lvAllUsers2" UseLayoutRounding="True" SelectionMode="Multiple"></ListView>
                            </GroupBox>
                        </DockPanel>
                        <GroupBox Name="pnlUsersGroup" Grid.Column="2"  Visibility="Visible"  Header="Users Group" Padding="0,9,0,0">
                            <ListView Name="lvUsersGroup" UseLayoutRounding="True" SelectionMode="Multiple"></ListView>
                        </GroupBox>
                    </Grid>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" DockPanel.Dock="Top" Background="#69EBEBEB">
                        <my:CRSLabelControl HorizontalAlignment="Stretch" Margin="3" Name="txtGrpName" VerticalAlignment="Center" ControlType="text" LabelContent="New Group" DockPanel.Dock="Top" LabelIconVisibility="Collapsed" WidthLabel="80" UseLayoutRounding="False" Width="326"  HeightControl="25" Height="25" />
                        <my:CRSIconButton Name="btnSaveGrp" FontFamily="Segoe Print" FontSize="20" FontWeight="Bold" Height="26" Icon="/MyBlackBoxCore;component/Images/del.png" IconHeight="24" IconVisibility="Collapsed" IconWidth="24" LabelText="v" LabelVisibility="Visible" ToolTip="Cancella" Width="26" DockPanel.Dock="Left" Margin="1,3" Click="btnSaveGrp_Click" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <GroupBox  Grid.Row="1" >

        </GroupBox>
    </Grid>
</UserControl>
