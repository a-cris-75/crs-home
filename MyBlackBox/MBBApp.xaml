<UserControl x:Class="MyBlackBoxCore.MBBApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyBlackBoxCore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" Drop="UserControl_Drop"
             xmlns:my="clr-namespace:CRS.WPFControlsLib;assembly=CRS.WPFControlsLib" >
    <Grid Name="pnlGridMain">
        <Grid.RowDefinitions  >
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>

        </Grid.RowDefinitions>
        <DockPanel x:Name="pnlTop" Grid.Row="0" LastChildFill="False">
            <!--Image Name="imgExit" Visibility="Visible"
                                   Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Images/bullet_ball_glass_red.ico"  ToolTip="Exit"  Cursor="Hand" Margin="3" 
            MouseDown="imgExit_MouseDown" HorizontalAlignment="Left" MinWidth="21" MinHeight="21" /-->
            <Image Name="imgExit" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_red.ico"  ToolTip="Exit"  Cursor="Hand" Margin="3" 
                       MouseDown="imgExit_MouseDown" HorizontalAlignment="Center" MinWidth="21" MinHeight="21" />

            <Image Name="imgResize" Visibility="Collapsed" Tag="0"
                   Height="20" Width="21" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_green.ico"  
                   ToolTip="Resize.."  Cursor="Hand" MinWidth="21" MinHeight="21" MouseDown="imgResize_MouseDown" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" />

            <Image Name="imgGoToRigth" Height="20" Width="21" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_yellow.ico"  
                   ToolTip="Resize.."  Cursor="Hand" MinWidth="21" MinHeight="21" MouseDown="imgGoToRigth_MouseDown" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
            <!--Border  CornerRadius="10" Background="#C5FBF07D"  
                     Height="30" Width="30" Visibility="Hidden"
                     BorderBrush="#50000000" BorderThickness="1" HorizontalAlignment="Right" DockPanel.Dock="Right" >
                <TextBlock Name="btnMenu" Text="M"  
                         Background="Transparent" Cursor="Hand"
                         FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"
                         ToolTip="Menu.." MouseDown="btnMenu_MouseDown" />
            </-->
        </DockPanel>
        <Border Grid.Row="1" Margin ="2" Padding="0" CornerRadius="10" Background="#FFE3E8EC"  BorderBrush="#50000000" BorderThickness="1" >
            <TabControl HorizontalAlignment="Stretch" Name="tcMain" VerticalAlignment="Stretch" Margin="3" SelectionChanged="tcMain_SelectionChanged">
                <TabItem Header="Recent">

                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="49*"/>
                            <ColumnDefinition Width="0"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100*"></RowDefinition>
                            <RowDefinition Height="32"></RowDefinition>
                        </Grid.RowDefinitions>
                        <DockPanel Name="pnlBtnsRecent" Grid.Row="1" Background="#FFFBFAF8"
                                   Visibility="Collapsed" Grid.ColumnSpan="2">
                            <my:CRSIconButton Name="btnOpenRecent" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="6" Canvas.Top="6"  
                              LabelText="&gt;" Icon="/MyBlackBoxCore;component/Images/playdx.png" LabelVisibility="Visible" 
                              IconHeight="28" IconWidth="28" ToolTip="Open selected files" Click="btnOpenRecent_Click" 
                              FontFamily="Segoe Print" FontSize="22" IconVisibility="Collapsed" FontWeight="Bold" HorizontalAlignment="Left"/>
                        </DockPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0" >
                            <DockPanel x:Name="pnlMainRecent" LastChildFill="False" ScrollViewer.VerticalScrollBarVisibility="Visible" ></DockPanel>
                        </ScrollViewer>
                        <DockPanel Name ="pnlBottomRecent" Grid.Row="1" Background="WhiteSmoke">
                            <Label Content="from: " FontStyle="Italic" VerticalAlignment="Center"></Label>
                            <my:CRSDateTimePicker Name="dtFromCount" TimeFormatString="24" SelectedDateChanged="dtFromCount_SelDateChanged"></my:CRSDateTimePicker> 
                        </DockPanel>
                    </Grid>

                </TabItem>
                <TabItem Header="Favorites">
                    <!--Border Grid.Row="0" CornerRadius="5"   BorderBrush="#50000000" BorderThickness="1" -->
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38"></RowDefinition>
                            <RowDefinition Height="100*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <DockPanel Name="pnlBtns" Grid.Row="0" Margin="2" Background="#FFFBFAF8">

                            <my:CRSIconButton Name="btnOpen" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="6" Canvas.Top="6"  
                              LabelText="&gt;" Icon="/MyBlackBoxCore;component/Images/playdx.png" LabelVisibility="Visible" 
                              IconHeight="28" IconWidth="28" ToolTip="Open selected files" Click="btnOpen_Click" 
                              FontFamily="Segoe Print" FontSize="22" IconVisibility="Collapsed" FontWeight="Bold" />
                            <my:CRSIconButton Name="btnAddApp" Width="32" Height="30" Margin="3,0,0,0" 
                              Canvas.Left="6" Canvas.Top="6"  LabelText="+" 
                              Icon="/MyBlackBoxCore;component/Images/playdx.png" LabelVisibility="Visible" IconHeight="28" IconWidth="28" 
                              ToolTip="Open folder of selected files" Click="btnAddApp_Click" FontFamily="Segoe Print" FontSize="22" 
                              IconVisibility="Collapsed" FontWeight="Bold" />
                            <my:CRSIconButton Name="btnDel"  Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="46" Canvas.Top="6" Icon="/MyBlackBoxCore;component/Images/del.png" IconHeight="24" IconWidth="24" LabelText="x" LabelVisibility="Visible" 
                              ToolTip="Delete.." Click="btnDel_Click" FontFamily="Segoe Print" FontSize="22" FontWeight="Bold" IconVisibility="Collapsed" />
                            <my:CRSIconButton Name="btnFind"  Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="86" Canvas.Top="6"  Icon="/MyBlackBoxCore;component/Images/find2.png" IconVisibility="Visible" IconWidth="24" IsManipulationEnabled="True" IconHeight="24" IconOrientation="Horizontal" LabelVisibility="Visible" ToolTip="Cerca" Visibility="Collapsed"/>
                            <my:CRSIconButton  Name="btnExit" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="310" Canvas.Top="6" Icon="/MyBlackBoxCore;component/Images/cancel2.png" IconHeight="24" IconWidth="24" LabelText="Open" LabelVisibility="Collapsed" ToolTip="Exit" Click="btnExit_Click" Visibility="Collapsed" />


                            <Label x:Name="lblOrder" Visibility="Hidden"
                       Content="Order by " HorizontalAlignment="Left"  VerticalAlignment="Center" />
                            <ComboBox Name="cbOrderBy"  Visibility="Hidden"
                          Width="110" ToolTip="Order by" Margin="0,6,20,6" DropDownClosed="cbOrderBy_DropDownClosed" HorizontalAlignment="Left">
                                <ComboBoxItem Content="1- Date Modified" />
                                <ComboBoxItem Content="2- Name" />
                                <ComboBoxItem Content="3- Note" />
                            </ComboBox>
                        </DockPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.ColumnSpan="2" >
                            <DockPanel x:Name="pnlMainPersonal" LastChildFill="False" ScrollViewer.VerticalScrollBarVisibility="Auto" ></DockPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>

    </Grid>
</UserControl>
