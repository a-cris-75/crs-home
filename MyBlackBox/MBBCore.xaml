                             Foreground="Gray" FontStretch="UltraCondensed" FontSize="11" FontStyle="Italic" IsTabStop="False" Width="65" VerticalAlignment="Center" />

                    <Image Name="imgNewDoc" Height="21" Width="25" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Images/Pencil.ico"  
                       ToolTip="New Doc"  Cursor="Hand" MouseDown="imgNewDoc_MouseDown" MinWidth="21" MinHeight="21" DockPanel.Dock="Left" />

                    <TextBlock Name="txtNotEnlarge" Grid.Row="1"  UseLayoutRounding="True" 
                             Background="#C5F0F0F0" Cursor="Hand" 
