                        Opacity="0.7"  HorizontalAlignment="Left" />
                </DockPanel>
            </DockPanel>

            <Canvas Height="Auto"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="5,0,0,0">
                <Image Name="imgBlackBox" Source="/MyBlackBoxCore;component/Images/box2.png" Canvas.Left="0" Canvas.Top="-23" Height="110" Width="114" />
            </Canvas>
            <DockPanel Name="pnlSaveCancSyncro" Grid.Column="2" Grid.Row="1" Width="Auto" OpacityMask="Black" VerticalAlignment="Top" Height="80" HorizontalAlignment="Left" Margin="5,0,0,0" >
                <Canvas HorizontalAlignment="Right" Height="45" Visibility="Hidden">
                    <Image Name="imgBlackBoxSyncro" VerticalAlignment="Stretch" Source="/MyBlackBoxCore;component/Images/sync1.png" HorizontalAlignment="Stretch" Canvas.Left="0" Canvas.Top="0" Stretch="Fill" Height="32" Width="32" Visibility="Visible" />
                    <Image Name="imgBlackBoxInsert" VerticalAlignment="Stretch" Source="/MyBlackBoxCore;component/Images/download.png" HorizontalAlignment="Stretch" Canvas.Left="0" Canvas.Top="0" Stretch="Fill" Height="35" Width="32" Visibility="Visible" />
                </Canvas>

                <!--Canvas HorizontalAlignment="Left" VerticalAlignment="Bottom" Canvas.Top="2" -->
                <DockPanel Name="pnlOkCanc" Visibility="Visible" Width="35" Margin="3,0,0,0" HorizontalAlignment="Left" >
                    <Image Name="imgOk" Stretch="Fill" Height="26" Width="26" VerticalAlignment="Top" Source="/MyBlackBoxCore;component/Images/confirm2.png" 
                            ToolTip="Save note" MouseDown="imgOk_MouseDown" Cursor="Hand" DockPanel.Dock="Top" HorizontalAlignment="Center" />
                    <Image Name="imgCanc" Stretch="Fill" Height="26" Width="26" VerticalAlignment="Top" Source="/MyBlackBoxCore;component/Images/cancel2.png" 
                            ToolTip="Cancel" MouseDown="imgCanc_MouseDown" Cursor="Hand" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,2,0,0" />

                </DockPanel>
                <!--/-->

            </DockPanel>
            <DockPanel  Name="pnlTopBox"  Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" Margin="10,2,-10,0" >
                <TextBlock Name="lblNumNotes"  Margin="3,1,0,0" Text=" "
                           FontStyle="Italic" UseLayoutRounding="True" TextWrapping="Wrap"
                           Foreground="Gray" Width="Auto"  DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            </DockPanel>

            <DockPanel Name="pnlLblInfo" Grid.Column="1" Grid.Row="2" Margin="0,0,-50,0">
                <!--TextBlock Name="lblInfobox"  Text="Double click.."  Margin="0,10,0,0" FontStyle="Italic" UseLayoutRounding="True" TextWrapping="Wrap"
                           Foreground="Gray" Width="Auto" /-->
                <TextBox Name="lblInfo"  Text="Double click or click to menu buttons to start.."  IsReadOnly="true"
                         Margin="5,0,0,0" FontStyle="Italic" UseLayoutRounding="True" TextWrapping="Wrap"
                           Foreground="Gray" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Center"/>
            </DockPanel>
            <DockPanel Grid.Row="0" Grid.Column=" 2">
                <Image  Height="26" Width="26" x:Name="imgSyncShared" Stretch="Fill" Source="/MyBlackBoxCore;component/Images/sync1.png" HorizontalAlignment="Center" VerticalAlignment="Top" ToolTip="Syncronize" Cursor="Hand" 
                        DockPanel.Dock="Bottom"
                        MouseDown="imgSyncShared_MouseDown" Margin="0,2,0,0" />
            </DockPanel>
        </Grid>
        <Border Name="pnlTxtMsg" Grid.Column="1" Grid.Row="0" Margin="-46,0,-46,2" Padding="2" BorderThickness="1" CornerRadius="5" BorderBrush="#50000000" Background="#C5F0F0F0" >
            <Grid Name="pnlGridTextMsg"  Grid.Column="1" >
                <Grid.RowDefinitions>

                    <RowDefinition Height="32*"></RowDefinition>
                    <RowDefinition Height="21"/>
                    <!--RowDefinition Height="24"></-->
                </Grid.RowDefinitions>
                <!--Grid.Resources>
                    <Style TargetType="{x:Type Button}" x:Key="formatTextStyle">
                        <Setter Property="FontFamily" Value="Palatino Linotype"></Setter>
                        <Setter Property="Width" Value="30"></Setter>
                        <Setter Property="FontSize" Value ="14"></Setter>
                        <Setter Property="CommandTarget" Value="{Binding ElementName=txtMsg}"></Setter>
                    </Style>

                    <Style TargetType="{x:Type Button}" x:Key="formatImageStyle">
                        <Setter Property="Width" Value="30"></Setter>
                        <Setter Property="CommandTarget" Value="{Binding ElementName=txtMsg}"></Setter>
                    </Style>
                </Grid.Resources-->

                <DockPanel Name="pnlRTF" Grid.Row="0" Background="WhiteSmoke">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="100*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!-- This tool bar contains all the editing buttons. -->
                        <ToolBar Name="toolBarRTF" Height="30" 
                             Grid.Row="0"
                             DockPanel.Dock="Top">


                            <Button x:Name="btnRTFStyleBold" 
                                Command="EditingCommands.ToggleBold" ToolTip="Bold" >
                                <TextBlock FontWeight="Bold">B</TextBlock>
                            </Button>
                            <Button
                                Command="EditingCommands.ToggleItalic" ToolTip="Italic">
                                <TextBlock x:Name="btnRTFStyleItalic" FontStyle="Italic" FontWeight="Bold">I</TextBlock>
                            </Button>
                            <Button Command="EditingCommands.ToggleUnderline" ToolTip="Underline">
                                <TextBlock x:Name="btnRTFStyleUnderline" TextDecorations="Underline" FontWeight="Bold">U</TextBlock>
                            </Button>

                            <Button Command="EditingCommands.ToggleBullets" ToolTip="Bullets">
                                <Image x:Name="btnRTFStyleTabIndPoint" Source="Images\ListBullets.png"></Image>
                            </Button>
                            <Button Command="EditingCommands.ToggleNumbering" ToolTip="Numbering">
                                <Image x:Name="btnRTFStyleTabIndNum" Source="Images\ListNumbering.png"></Image>
                            </Button>



                            <Button  Command="EditingCommands.IncreaseFontSize" ToolTip="Grow Font">
                                <Image Source="Images\CharacterGrowFont.png"></Image>
                            </Button>
                            <Button  Command="EditingCommands.DecreaseFontSize" ToolTip="Shrink Font">
                                <Image Source="Images\CharacterShrinkFont.png"></Image>
                            </Button>
                            <DockPanel Width="25" Height="25" >
                                <Button  Name ="btnToolBarTextcolor" 
                                 DockPanel.Dock="Top" ToolTip="Font Color" Click="btnToolBarTextcolor_Click" 
                                     Background="{x:Null}" BorderBrush="{x:Null}">
                                    <Image Source="Images\Apps-Font-icon.png" Height="16"></Image>
                                </Button>
                                <Button  DockPanel.Dock="Bottom" Name ="btnToolBarTextcolorSel" 
                                     Background="Red" BorderThickness="1" 
                                     BorderBrush="#FFB6B1B1" Click="btnToolBarTextcolorSel_Click" Width="25" 
                                     Height="5" VerticalAlignment="Bottom" Margin="0" />
                            </DockPanel>
                            <DockPanel Width="25" Height="25" Margin="1,0,0,0" >
                                <Button  DockPanel.Dock="Top" Name ="btnToolBarBackcolor" ToolTip="Back Color" 
                                     Click="btnToolBarBackcolor_Click" Background="{x:Null}" BorderBrush="{x:Null}" >
                                    <Image Source="Images\paint-can-arrow-icon.png" VerticalAlignment="Top" Height="16"></Image>
                                </Button>
                                <Button  DockPanel.Dock="Bottom" Name ="btnToolBarBackcolorSel" 
                                     Background="Yellow" BorderThickness="1" 
                                     BorderBrush="#FFB6B1B1" Click="btnToolBarBackcolorSel_Click" Width="25" 
                                     Height="5" VerticalAlignment="Bottom" Margin="0" />
                            </DockPanel>
                            <Button Name ="btnClearFormat" ToolTip="Clear Format" Click="btnClearFormat_Click">
                                <Image Source="Images/cancel2.png"></Image>
                            </Button>
                            <Button  Command="ApplicationCommands.Undo" ToolTip="Undo">
                                <Image x:Name="btnRTFRedo" Source="Images\EditUndo.png"></Image>
                            </Button>
                            <Button  Command="ApplicationCommands.Redo" ToolTip="Redo">
                                <Image x:Name="btnRTFUndo" Source="Images\EditRedo.png"></Image>
                            </Button>
                            <!--Button Name ="btnToolBarImage"  Command="EditingCommands.DecreaseFontSize" ToolTip="Insert Image"  Click="btnToolBarImage_Click">
                            <Image Source="Images\Images.png"></Image>
                        </Button-->

                            <!--Button Command="ApplicationCommands.Cut" ToolTip="Cut">
                            <Image x:Name="btnRTFCut" Source="Images\EditCut.png"></Image>
                        </>
                        <Button  Command="ApplicationCommands.Copy" ToolTip="Copy">
                            <Image x:Name="btnRTFCopy" Source="Images\EditCopy.png"></Image>
                        </Button>
                        <Button  Command="ApplicationCommands.Paste" ToolTip="Paste">
                            <Image x:Name="btnRTFPast" Source="Images\EditPaste.png"></Image>
                        </Button>

                        <Button Style="{StaticResource formatImageStyle}" Command="EditingCommands.AlignLeft" ToolTip="Align Left">
                            <Image Source="Images\ParagraphLeftJustify.png"></Image>
                        </>
                        <Button Style="{StaticResource formatImageStyle}" Command="EditingCommands.AlignCenter" ToolTip="Align Center">
                            <Image Source="Images\ParagraphCenterJustify.png"></Image>
                        </Button>
                        <Button Style="{StaticResource formatImageStyle}" Command="EditingCommands.AlignRight" ToolTip="Align Right">
                            <Image Source="Images\ParagraphRightJustify.png"></Image>
                        </Button>
                        <Button Style="{StaticResource formatImageStyle}" Command="EditingCommands.AlignJustify" ToolTip="Align Justify">
                            <Image Source="Images\ParagraphFullJustify.png"></Image>
                        </Button>
                        <Button Style="{StaticResource formatImageStyle}" Command="EditingCommands.IncreaseIndentation" ToolTip="Increase Indent">
                            <Image Source="Images\ParagraphIncreaseIndentation.png"></Image>
                        </Button>
                        <Button Style="{StaticResource formatImageStyle}" Command="EditingCommands.DecreaseIndentation" ToolTip="Decrease Indent">
                            <Image Source="Images\ParagraphDecreaseIndentation.png"></Image>
                        </Button-->

                        </ToolBar>

                        <Grid Grid.Row="1">
                            <TextBlock Name="txtblMsg" Text="  Enter a Text Note.." FontStyle="Italic" UseLayoutRounding="True" 
                                       TextWrapping="Wrap" 
                                        Foreground="{StaticResource WatermarkForeground}" 
                                        Visibility="{Binding ElementName=txtMsg}">
                            </TextBlock>
                            <RichTextBox Name="txtMsg"  VerticalScrollBarVisibility="Auto" UseLayoutRounding="True" 
                                        Background="Transparent" BorderBrush="{x:Null}" AcceptsReturn="True" AcceptsTab="True" 
