                </DockPanel>
                <DockPanel>
                    <Button Style="{StaticResource RoundedButtonStyle}" Name="btnNext"  Content="&gt;" Click="btnNext_Click" IsTabStop="False" ToolTip="Next" Canvas.Left="23" Canvas.Top="1" Width="20" Cursor="Hand" VerticalAlignment="Top" Margin="2,0,0,0" DockPanel.Dock="Top" />
