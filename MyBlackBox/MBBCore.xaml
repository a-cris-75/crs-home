                                        HorizontalScrollBarVisibility="Auto" Cursor="Pen" 
                                         MouseEnter="txtMsg_MouseEnter" MouseLeave="txtMsg_MouseLeave" >
                                <RichTextBox.Resources>
                                    <Style TargetType="{x:Type Paragraph}">
                                        <Setter Property="Margin" Value="0" />
                                    </Style>
                                </RichTextBox.Resources>
                            </RichTextBox>
                        </Grid>
                    </Grid>
                </DockPanel>
                <DockPanel Grid.Row="1"  Background="#C5F0F0F0" >
                    <!--TextBlock Name="txtClose" Grid.Row="1"  UseLayoutRounding="True" 
                             Background="#C5F0F0F0" Cursor="Hand" 
