                <Image Name="imgMinimize" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_yellow.ico" ToolTip="Minimize"  Cursor="Hand" MinWidth="21" MinHeight="21" 
                       MouseDown="imgMinimize_MouseDown" DockPanel.Dock="Top" Margin="2,0,3,0" HorizontalAlignment="Left" />
                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Left" DockPanel.Dock="Top">
                    <Image Name="imgMaximizeMsg" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_green.ico"  
                           ToolTip="Enlarge ++"  Cursor="Hand" MinWidth="21" MinHeight="21" MouseDown="imgMaximizeMsg_MouseDown" Margin="2,0,3,0" HorizontalAlignment="Left" />

                    <TextBlock Name="lblAutoExpand"  Text="A"  Visibility="Visible" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Calibri" Cursor="Hand" Width="12" DockPanel.Dock="Right" MouseDown="lblAutoExpand_MouseDown" ToolTip="Auto dimension text note"/>

                </DockPanel>
                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Left" DockPanel.Dock="Top">

