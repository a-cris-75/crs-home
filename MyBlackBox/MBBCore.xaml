                </DockPanel>
            </DockPanel>

            <!--Canvas Grid.Column="0" Grid.Row="1" Width="Auto" Height="Auto" Margin="8,-5,0,0"  VerticalAlignment="Top"-->
            <DockPanel Name="pnlDimMode" Grid.Column="0" Grid.Row="1" Margin="10,3,-5,-5" LastChildFill="False" HorizontalAlignment="Left" VerticalAlignment="Bottom" >

