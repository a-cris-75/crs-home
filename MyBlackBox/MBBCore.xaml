                    <Button Style="{StaticResource RoundedButtonStyle}" Name="btnPrev"  Content="&lt;" Click="btnPrev_Click" IsTabStop="False" ToolTip="Prev" Canvas.Left="1" Canvas.Top="1" Width="20" Cursor="Hand" Height="24" VerticalAlignment="Top" Margin="0" DockPanel.Dock="Top" />
