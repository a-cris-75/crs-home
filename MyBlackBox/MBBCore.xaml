        <DockPanel Name="pnlLeftFunctions" Grid.Column="0" Grid.Row="1">


            <Border CornerRadius="5"  BorderThickness="1" BorderBrush="#50000000" Background="#C5F0F0F0" DockPanel.Dock="Top" >
                <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Margin="0,3,0,0">
                    <Image Name="imgFind" Margin="3,2,2,2" Canvas.Left="7" Canvas.Top="40" Stretch="Fill" Height="27" Width="27" VerticalAlignment="Bottom" Source="/MyBlackBoxCore;component/Images/find3.ico" ToolTip="Find notes" Cursor="Hand" MouseDown="imgFind_MouseDown" DockPanel.Dock="Top" />
                    <Image Name="imgOptions" Margin="3,2,2,2"  Canvas.Left="7" Canvas.Top="120"  Stretch="Fill" Height="27" Width="27" VerticalAlignment="Bottom" Source="/MyBlackBoxCore;component/Images/configuration.png" ToolTip="Options" MouseDown="imgOptions_MouseDown" Cursor="Hand" DockPanel.Dock="Top" />
