                </DockPanel>
            </DockPanel>
            <DockPanel Name="pnlBtnsRecentNote" Height="37"  Grid.Column="0" Grid.Row="2"  DockPanel.Dock="Top" Margin="3,10,-2,0" HorizontalAlignment="Center">
                <DockPanel Margin="0" >
                    <Button Style="{StaticResource RoundedButtonStyle}" Name="btnRecentPrev" Content="&lt;&lt;" ToolTip ="Recent prev" Canvas.Left="2" Canvas.Top="2"  Click="btnRecentPrev_Click" Cursor="Hand" />
                </DockPanel>
                <DockPanel Margin="2,0,0,0">
                    <Button Style="{StaticResource RoundedButtonStyle}" Name="btnRecentNext" Content="&gt;&gt;" ToolTip ="Recent next" Canvas.Left="23" Canvas.Top="2" Click="btnRecentNext_Click" FontFamily="SimSun" Cursor="Hand" />
