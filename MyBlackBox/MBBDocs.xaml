<UserControl x:Class="MyBlackBoxCore.MBBDocs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  Background="#FFEBEBEB"           
             xmlns:my="clr-namespace:CRS.WPFControlsLib;assembly=CRS.WPFControlsLib" 
             MouseEnter="UserControl_MouseEnter" HorizontalAlignment="Left" d:DesignHeight="195">
    <UserControl.Resources>
        <DataTemplate x:Key="MyImagesItemTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="{Binding Path=Image}" />
                <Label Grid.Row="1" Content="{Binding Path=Title}" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Border>
        <Grid Name="pnlGridMain">
            <Grid.RowDefinitions>
                <RowDefinition Height="34"></RowDefinition>
                <RowDefinition Height="200*"></RowDefinition>
            </Grid.RowDefinitions>

            <DockPanel Name="pnlTop" Grid.Row="0"  >

                <DockPanel Name="pnlBtns" Grid.Row="0" DockPanel.Dock="Top" Height="34" VerticalAlignment="Top">
                    <TextBlock Height="23" Name="textBlockNumDocs" Text="Files: " 
                               DockPanel.Dock="Right" FontStyle="Italic" VerticalAlignment="Center" Padding="3"
                               HorizontalAlignment="Right" />
                   
                    <Image Name="imgExit" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_red.ico"  ToolTip="Exit"  Cursor="Hand" Margin="3" 
                           MouseDown="imgExit_MouseDown" HorizontalAlignment="Center" MinWidth="21" MinHeight="21" />
                    <my:CRSIconButton Name="btnOpen" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="6" Canvas.Top="6"  
                              LabelText="&gt;" Icon="/MyBlackBoxCore;component/Images/playdx.png" LabelVisibility="Visible" 
                              IconHeight="28" IconWidth="28" ToolTip="Open selected files" Click="btnOpen_Click" 
                              FontFamily="Segoe Print" FontSize="22" IconVisibility="Collapsed" FontWeight="Bold" />
                    <my:CRSIconButton Name="btnOpenFolder" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="6" Canvas.Top="6"  
                              LabelText=">>" Icon="/MyBlackBoxCore;component/Images/playdx.png" LabelVisibility="Visible" 
                              IconHeight="28" IconWidth="28" ToolTip="Open folder files" Click="btnOpenFolder_Click" 
                              FontFamily="Segoe Print" FontSize="22" IconVisibility="Collapsed" FontWeight="Bold" />
                    <my:CRSIconButton Name="btnAddFiles" Width="32" Height="30" Margin="3,0,0,0" 
                              Canvas.Left="6" Canvas.Top="6"  LabelText="+" 
                              Icon="/MyBlackBoxCore;component/Images/playdx.png" LabelVisibility="Visible" IconHeight="28" IconWidth="28" 
                              ToolTip="Open folder of selected files" Click="btnAddFiles_Click" FontFamily="Segoe Print" FontSize="22" 
                              IconVisibility="Collapsed" FontWeight="Bold" />
                    <my:CRSIconButton Name="btnDel"  Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="46" Canvas.Top="6" Icon="/MyBlackBoxCore;component/Images/del.png" IconHeight="24" IconWidth="24" LabelText="x" LabelVisibility="Visible" 
                              ToolTip="Delete.." Click="btnDel_Click" FontFamily="Segoe Print" FontSize="22" FontWeight="Bold" IconVisibility="Collapsed" />
                    <my:CRSIconButton  Name="btnExit" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="310" Canvas.Top="6" Icon="/MyBlackBoxCore;component/Images/cancel2.png" IconHeight="24" IconWidth="24" LabelText="Open" LabelVisibility="Collapsed" ToolTip="Exit" Click="btnExit_Click" Visibility="Collapsed" />
                    <my:CRSIconButton  Name="btnSyncroLocal" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="310" Canvas.Top="6" Icon="/MyBlackBoxCore;component/Images/sync2.png" IconHeight="24" IconWidth="24" 
                               LabelText="Syncro" LabelVisibility="Collapsed" 
                               ToolTip="Syncronize with last modified"  Visibility="Visible" Click="btnSyncroLocal_Click" />
                    <my:CRSIconButton  Name="btnShowFilter" Width="32" Height="30" Margin="3,0,0,0" Canvas.Left="310" Canvas.Top="6" IconVisibility="Collapsed" IconHeight="24" IconWidth="24" 
                                       LabelText="..." LabelVisibility="Visible" ToolTip="Filter" Click="btnShowFilter_Click" Visibility="Visible" />

                    <CheckBox Name="chkSelAll" Margin="3,5,5,5" Click="chkSelAll_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Height="22" Name="textBlockNote" Cursor="Hand" Text="Note.. " DockPanel.Dock="Left" FontStyle="Italic" VerticalAlignment="Center" Padding="3" HorizontalAlignment="Right" MouseDown="textBlockNote_MouseDown" Margin="0,0,5,0" />

                </DockPanel>

                <DockPanel Name="pnlFilters" Visibility="Visible" VerticalAlignment="Top" LastChildFill="False">
                    <Grid  Height="34" VerticalAlignment="Top"  DockPanel.Dock="Top" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="65"></ColumnDefinition>
                            <ColumnDefinition Width="200*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="lblFilterName" Content="Find name" VerticalAlignment="Center" Width="65" HorizontalAlignment="Left" />
                        <TextBox Name="txtFind"  Grid.Column="1" AllowDrop="True" Margin="3,6" TextChanged="txtFind_TextChanged" FontSize="14" ToolTip="Find name" 
                                 HorizontalContentAlignment="Stretch" VerticalAlignment="Center" />

                    </Grid>
                    <DockPanel DockPanel.Dock="Top" Height="34" VerticalAlignment="Top">
                        <Label x:Name="lblFilterDate" Content="Find date" DockPanel.Dock="Left" VerticalAlignment="Center" Width="67" Margin="0,4" />
                        <DatePicker Name="dtFilter1" Width="110" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Left" SelectedDateChanged="dtFilter1_SelectedDateChanged" Margin="2,0,0,0"></DatePicker>
                        <Label Content="-" DockPanel.Dock="Left" Margin="1,0" VerticalAlignment="Center" Width="16" HorizontalAlignment="Left" />
                        <DatePicker Name="dtFilter2" Width="110" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,5" SelectedDateChanged="dtFilter2_SelectedDateChanged"></DatePicker>
                        <my:CRSIconButton Name="btnFind"  Width="32" Height="30" Margin="6,0,0,0" Icon="/MyBlackBoxCore;component/Images/find3.png" IconVisibility="Visible" IconWidth="24" IsManipulationEnabled="True" 
                                          IconHeight="24" IconOrientation="Horizontal" LabelVisibility="Visible" ToolTip="Cerca" Visibility="Visible" HorizontalAlignment="Left" DockPanel.Dock="Right" VerticalAlignment="Center" Click="btnFind_Click"/>

                    </DockPanel>
                    <DockPanel Height="34" VerticalAlignment="Top">
                        <Label x:Name="lblOrder" Content="Order by " HorizontalAlignment="Left"  VerticalAlignment="Center" Width="68"/>
                        <ComboBox Name="cbOrderBy"  Width="190" ToolTip="Order by" Margin="0,6,3,6" DropDownClosed="cbOrderBy_DropDownClosed" HorizontalAlignment="Left">
                            <ComboBoxItem Content="1- Date modified ascending" />
                            <ComboBoxItem Content="2- Date modified descending" />
                            <ComboBoxItem Content="3- Name" />
                            <ComboBoxItem Content="4- Title note" />
                        </ComboBox>

                    </DockPanel>
                </DockPanel>
            </DockPanel>
            <ListView Grid.Row="1" Margin ="2,5,2,2" Background="WhiteSmoke" Name="lvDocs" UseLayoutRounding="True" SelectionMode="Single"></ListView>

        </Grid>
    </Border>
</UserControl>
