<Window x:Class="MyBlackBoxCore.WinMBBTitlesNotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinTitlesNotes" Height="492.855" Width="450" xmlns:my="clr-namespace:MyBlackBoxCore" Icon="/MyBlackBoxCore;component/BlackBoxIcon64.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Name="pnlLeft" BorderThickness="1" CornerRadius="5" BorderBrush="#50000000" Background="#C5F0F0F0" Margin="0,3" Padding="2">
            <StackPanel Orientation="Horizontal" Background="#FFF9F9F9">

                <StackPanel Name="pnlWinBtns"  Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Canvas.Left="2" Canvas.Top="68" >
                    <!--Image Name="imgExit" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Images/bullet_ball_glass_red.ico"  ToolTip="Exit"  Cursor="Hand" Margin="1" MouseDown="imgExit_MouseDown" HorizontalAlignment="Center" MinWidth="21" MinHeight="21" Canvas.Top="-1" /-->
                </StackPanel>
            </StackPanel>
        </Border>

        <DockPanel Name="pnlTitle" Grid.Row="1">
            <my:MBBTitle x:Name="ctrlMBBTitle" Width="Auto" DockPanel.Dock="Top"/>
        </DockPanel>
        <DockPanel Name="pnlNote" Grid.Row="2">
            <my:MBBNotes x:Name="ctrlMBBNotes"  Width="Auto" DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
