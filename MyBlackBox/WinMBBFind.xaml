<Window x:Class="MyBlackBoxCore.WinMBBFind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my1="clr-namespace:CRS.WPFControlsLib;assembly=CRS.WPFControlsLib" 
        Title="MBB Find" Height="536" Width="680" 
        xmlns:my="clr-namespace:MyBlackBoxCore" 
        WindowStyle="None" UseLayoutRounding="True" AllowsTransparency="True" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        ShowInTaskbar="False" Background="{x:Null}" ResizeMode="CanResizeWithGrip" 
        MinWidth="510" MinHeight="510" Topmost="True" Icon="/MyBlackBoxCore;component/BlackBoxIcon64.ico">
    <Grid Name="pnlMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" Margin="0,1,0,1" Background="#C5F0F0F0" BorderBrush="#50000000" BorderThickness="1"  CornerRadius="5" >
            <TabControl Name="tcFind" Margin="2">
                <TabItem Header="Title" Name="tiTitle" UseLayoutRounding="True" >
                    <DockPanel Margin="2">
                        <my:MBBTitle x:Name="ctrlMBBTitle" KeyDown="ctrlMBBTitle_KeyDown" Width="Auto" Height="Auto"/>
                    </DockPanel>
                </TabItem>
                <TabItem Header="Notes" Name="tiNote" UseLayoutRounding="True" IsTabStop="False" >
                    <DockPanel >
                        <my:MBBNotes x:Name="ctrlMBBNotes" UseLayoutRounding="True" Width="Auto" Height="Auto"/>
                    </DockPanel>
                </TabItem>

                <TabItem Header="Docs" Name="tiDoc" UseLayoutRounding="True" IsTabStop="False" >
                    <DockPanel >
                        <my:MBBDocs x:Name="ctrlMBBDocs" Width="Auto" HorizontalAlignment="Stretch"
                         IsBtnExitVisible="False"/>
                    </DockPanel>
                </TabItem>

                <TabItem Header="Share" Name="tiUsersSh" UseLayoutRounding="True" IsTabStop="False">
                    <DockPanel >
                        <my:MBBSharingUsers x:Name="ctrlMBBShare" IsBtnExitVisible="False"/>
                    </DockPanel>
                </TabItem>
            </TabControl>
        </Border>
        <Border Name="pnlTop" BorderThickness="1" Margin="0,2,0,2"  CornerRadius="5" BorderBrush="#50000000" Background="#C5F0F0F0" Padding="2" MinHeight="36">
            <StackPanel  Orientation="Horizontal" Background="#FFF9F9F9">

                <StackPanel Name="pnlWinBtns"  Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Canvas.Left="2" Canvas.Top="68" >
                    <Image Name="imgExit" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_red.ico"  ToolTip="Exit"  Cursor="Hand" Margin="1" MouseDown="imgExit_MouseDown" HorizontalAlignment="Center" MinWidth="21" MinHeight="21" Canvas.Top="-1" />
                    <Image Name="imgMaximize" Height="21" Width="21" VerticalAlignment="Center" Source="/MyBlackBoxCore;component/Ico/bullet_ball_glass_yellow.ico"  ToolTip="Maximize/minimize"  Cursor="Hand" Margin="1" HorizontalAlignment="Center" MinWidth="21" MinHeight="21" Canvas.Top="-1" MouseDown="imgMaximize_MouseDown" />
                </StackPanel>
                <Expander x:Name="expFilter" Expanded="expFilter_Expanded" Collapsed="expFilter_Collapsed" Width="610" Header="TITLE HEADER" FontWeight="Bold">

                    <StackPanel x:Name="pnlFilter" Orientation="Horizontal" Visibility="Visible">
                        <!--Canvas Width="160"-->

                        <GroupBox Header="Days" HorizontalAlignment="Left" Margin="3,3,0,0" x:Name="gbDate" VerticalAlignment="Top" Height="88">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel>
                                    <RadioButton Content="Today" x:Name="rbToday" Margin="2" GroupName="date" Click="rbToday_Click" />
                                    <RadioButton Content="7 days" x:Name="rbWeek" Margin="2" GroupName="date" Click="rbToday_Click"/>
                                    <RadioButton Content="1 month" x:Name="rbMonth" Margin="2" GroupName="date" Click="rbToday_Click"/>
                                </StackPanel>
                                <StackPanel>
                                    <RadioButton Content="3 months" x:Name="rb3Month" IsChecked="True" Margin="2" GroupName="date" Click="rbToday_Click"/>
                                    <RadioButton Content="1 year" x:Name="rbYear" Margin="2" GroupName="date" Click="rbToday_Click"/>
                                    <RadioButton Content="All" x:Name="rbAll" Margin="2" GroupName="date" Click="rbToday_Click"/>
                                </StackPanel>
                                <StackPanel>
                                    <DatePicker Height="25" HorizontalAlignment="Left" Margin="3" x:Name="dtDate1" VerticalAlignment="Top" Width="150" />
                                    <DatePicker Height="25" HorizontalAlignment="Left" Margin="3" x:Name="dtDate2" VerticalAlignment="Top" Width="150" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <!--/Canvas-->
                        <GroupBox HorizontalAlignment="Left" x:Name="gbRateFilter" Margin="3,3,0,0" VerticalAlignment="Top" Header="Rate" Height="88" Width="141">
                            <StackPanel Margin="2" Height="65" Orientation="Vertical">
                                <StackPanel x:Name="pnlRate" Orientation="Horizontal" >
                                    <Image Height="21" x:Name="imgRat1" Stretch="Fill" Width="21" VerticalAlignment="Bottom" Source="/MyBlackBoxCore;component/Images/starGray1.png" Canvas.Top="3" Canvas.Left="14" Tag="1" Cursor="Hand" MouseDown="imgRat5_MouseDown" />
                                    <Image Height="21" x:Name="imgRat2" Stretch="Fill" Width="21" VerticalAlignment="Bottom" Source="/MyBlackBoxCore;component/Images/starGray1.png" Canvas.Top="3" Canvas.Left="38" Tag="2" Cursor="Hand" MouseDown="imgRat5_MouseDown" />
                                    <Image Height="21" x:Name="imgRat3" Stretch="Fill" Width="21" VerticalAlignment="Bottom" Source="/MyBlackBoxCore;component/Images/starGray1.png" Canvas.Top="3" Canvas.Left="62" Tag="3" Cursor="Hand" MouseDown="imgRat5_MouseDown" />
                                    <Image Height="21" x:Name="imgRat4" Stretch="Fill" Width="21" VerticalAlignment="Bottom" Source="/MyBlackBoxCore;component/Images/starGray1.png" Canvas.Top="3" Canvas.Left="86" Tag="4" Cursor="Hand" MouseDown="imgRat5_MouseDown" />
                                    <Image Height="21" x:Name="imgRat5" Stretch="Fill" Width="21" VerticalAlignment="Bottom" Source="/MyBlackBoxCore;component/Images/starGray1.png" Canvas.Top="3" Canvas.Left="110" Tag="5" Cursor="Hand" MouseDown="imgRat5_MouseDown" />

                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Width="120" Height="25">
                                    <RadioButton Content="&gt;=" x:Name="rbGreaterThan" Margin="2,4,5,2" IsChecked="True" GroupName="rate" />
                                    <RadioButton Content="=" x:Name="rbEqual" Margin="4,4,5,2" GroupName="rate" />
                                    <RadioButton Content="&lt;" x:Name="rbLessThan" Margin="8,4,5,2" GroupName="rate" Width="33" />
                                </StackPanel>
                                <CheckBox Content="Only favorites" Height="17" x:Name="chkOnlyFavorites" Margin="2,1,1,1"/>
                            </StackPanel>
                        </GroupBox>
                        <Button Content="&gt;&gt;" Height="62" HorizontalAlignment="Left" x:Name="btnSetFilter" VerticalAlignment="Top" Width="40" Click="btnSetFilter_Click" Margin="7,20,10,10" FontFamily="Segoe Print" FontSize="22" FontWeight="Bold" />
                    </StackPanel>
                </Expander>
                <!--StackPanel Name="pnlHeader" Orientation="Horizontal" Width="100"  HorizontalAlignment="Right"-->

                <!--/StackPanel-->

            </StackPanel>

        </Border>
    </Grid>
</Window>
