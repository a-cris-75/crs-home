        Title="Sharing Notes" Height="369" Width="400" xmlns:my="clr-namespace:MyBlackBoxCore" ResizeMode="CanResizeWithGrip" WindowStyle="None" 
        WindowStartupLocation="Manual" Topmost="True" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        AllowsTransparency="True"  Background="{x:Null}" ShowInTaskbar="False" Icon="/MyBlackBoxCore;component/BlackBoxIcon64.ico">
    <Grid>
        <Border Grid.Row="1" Name="pnlLeft" BorderThickness="1" CornerRadius="5" BorderBrush="#50000000" Background="#C5F0F0F0" >
            <my:MBBSharingNotes x:Name="ctrlMBBSharingNotes" ShowReply="False" ShowDocs="False" 
