<Window x:Class="MyBlackBoxCore.WinMBBCore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:MyBlackBoxCore" 
        xmlns:my1="clr-namespace:CRS.WPFControlsLib;assembly=CRS.WPFControlsLib" 
        Title="MyBlackBox" Height="360" Width="300"
        ResizeMode="NoResize" WindowStyle="None" UseLayoutRounding="True" 
        AllowsTransparency="True" Background="Transparent" 
        Opacity="1" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"        
        ShowInTaskbar="False" AllowDrop="True" Topmost="True" 
        StateChanged="Window_StateChanged" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave" Closing="Window_Closing"
        Icon="/MyBlackBoxCore;component/BlackBoxIcon64.ico" MouseLeftButtonUp="Window_MouseLeftButtonUp" >
    <Window.OpacityMask>
        <SolidColorBrush Color="Black"/>
    </Window.OpacityMask>
    <Grid Name="pnlGridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="1"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <!--my:MBBCore x:Name="crsMyBlackBoxCore" MouseEnter="crsMyBlackBoxCore_MouseEnter" MouseLeave="crsMyBlackBoxCore_MouseLeave" 
                              HorizontalAlignment="Center" VerticalAlignment="Center" 
                              UseLayoutRounding="True" Expanded="False" MouseDoubleClick="crsMyBlackBoxCore_MouseDoubleClick">
            <my:MBBCore.Background>
                <SolidColorBrush />
            </my:MBBCore.Background>
        </my:MBBCore-->
        <my:MBBCore  x:Name="ctrlMBBCore" Width="Auto"  Height="Auto"  Grid.Column="0"
                     Visibility="Visible" Margin="0,0,0,0" />
        <my:MBBFunctions x:Name ="ctrlMBBFunctions"  Grid.Column="0" Width="Auto" Margin="120,0,0,155" 
                         HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <my:MBBActivity x:Name="ctrlActivity" Grid.Column="0" 
                        Visibility="Hidden" Height="Auto" MODE="-1"/>
        <my:MBBApp x:Name="ctrlApp" Grid.Column="0" 
                   Visibility="Hidden" Height="Auto" />

        <Canvas Name="pnlBtnMenu" Grid.Column="0" Grid.Row="0"  
                Visibility="Visible" Cursor="Hand"
                Margin="220,0,0,125" VerticalAlignment="Bottom" HorizontalAlignment="Left" >
            <!--my:MBBFunctions Canvas.Top="-0" Canvas.Left="-2"></-->
            <Border  CornerRadius="12" Background="#C5C77DFB"  
                     Height="27" Width="27" 
                     BorderBrush="#50000000" BorderThickness="1" VerticalAlignment="Top" >
                <TextBlock Name="btnMenu" Text="M"  
                         Background="Transparent" Foreground="Black" Cursor="Hand"
                         FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"
                         ToolTip="Menu.." MouseDown="TextBox_MouseDown" FontFamily="Segoe Print" />
            </Border>
        </Canvas>
        <DockPanel Name="pnlPlayActivity" Grid.Row="1">
            <!--Canvas HorizontalAlignment="Left" Width="45">
            <Image Name="imgPlay" Tag ="0" Margin="3,2,2,3"  Height="45" Width="30"   Cursor="Hand" Source="/MyBlackBoxCore;component/Images/bullet_triangle_blue.ico" ToolTip="Share" Visibility="Visible" OpacityMask="{x:Null}" DockPanel.Dock="Top" HorizontalAlignment="Left" MouseDown="imgPlay_MouseDown" />
            <Image Name="imgStartLog" Margin="3,2,2,3"  Height="12" Width="15" Cursor="Hand" Source="/MyBlackBoxCore;component/Images/bullet_ball_glass_yellow.ico" ToolTip="Share" Visibility="Visible" OpacityMask="{x:Null}" DockPanel.Dock="Top" HorizontalAlignment="Center" MouseDown="imgStartLog_MouseDown" />
            </-->

            <my1:CRSContainerData Name="ctrlCurrentActivity" Height="Auto" Width="Auto" 
                                  Margin="0"
                                  DockPanel.Dock="Top"
                                  IS_FIXED_SIZE="True"
                                  SHOW_RESIZE="False"
                                  SHOW_CLOSE="False"
                                  />
            <Border CornerRadius="5" Visibility="Collapsed"
                    Width="23" Height="23" Margin="-30,8,11,7" 
                    Padding="2" BorderThickness="1" BorderBrush="Gray" Background="WhiteSmoke" VerticalAlignment="Top">
                <Button Name="btnHideActivity" Tag="1" Content=".."  BorderThickness="0" Background="Transparent" Click="btnHideActivity_Click"/>
            </Border>
            <Image Name="imgHideActivity" Cursor="Hand" MouseDown="imgHideActivity_MouseDown"
                   Margin="0,-30,2,0" Width="21" Height="21" Tag="1" Visibility="Visible"
                   Source="Images/editundo.png" HorizontalAlignment="Right" DockPanel.Dock="Top" VerticalAlignment="Top" 
                   ToolTip="Hide panel activity"
                   />
            <Image Name="imgChain" Grid.Row="2" Tag="1"
               Margin="0,-30,25,0" Height="20" Width="20" 
               VerticalAlignment="Top" 
               Source="Ico/chain-unchain-icon.png"  
               ToolTip="link note activity" Cursor="Hand" DockPanel.Dock="Top" 
               MouseDown="imgChain_MouseDown" HorizontalAlignment="Right"
               />

        </DockPanel>
       
    </Grid>
</Window>
