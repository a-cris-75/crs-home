<Window x:Class="MyBlackBoxCore.WinMBBSharingUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinSharing" Height="429" Width="400" 
        xmlns:my="clr-namespace:MyBlackBoxCore"
        xmlns:my1="clr-namespace:CRS.WPFControlsLib;assembly=CRS.WPFControlsLib" 
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        AllowsTransparency="True" ShowInTaskbar="False" Background="{x:Null}" ResizeMode="CanResizeWithGrip" MinWidth="400" 
        Icon="/MyBlackBoxCore;component/BlackBoxIcon64.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="284*" />
            <RowDefinition Height="0" />
        </Grid.RowDefinitions>
        <Border Background="#C5F0F0F0" BorderBrush="#50000000" BorderThickness="1"  CornerRadius="5" >
            <my:MBBSharingUsers x:Name="ctrlMBBShare" Width="Auto" Height="Auto" Margin="3"/>
        </Border>
        <Border Grid.Row="1" Name="pnlLeft" BorderThickness="1" CornerRadius="5" BorderBrush="#50000000" Background="#C5F0F0F0" Margin="3" Visibility="Visible">
            <DockPanel Grid.Row="1" LastChildFill="False" Margin="0">
                <my1:CRSIconButton Canvas.Top="4" Height="30" Name="btnCanc" Width="42" LabelVisibility="Collapsed" Icon="/MyBlackBoxCore;component/Images/cancel2.png"  IconWidth="24" IconHeight="24" Cursor="Hand" DockPanel.Dock="Right" />
                <my1:CRSIconButton Canvas.Top="2" Height="30" Name="btnOk" Width="42" LabelVisibility="Collapsed" Icon="/MyBlackBoxCore;component/Images/confirm2.png" IconHeight="24" IconWidth="24" Cursor="Hand" DockPanel.Dock="Right" Margin="0,0,6,0" Click="btnOk_Click" />
            </DockPanel>
        </Border>
    </Grid>
</Window>
